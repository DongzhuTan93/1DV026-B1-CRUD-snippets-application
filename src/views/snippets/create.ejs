
<form class="login-container" method="post" action="/snippets/create">
  <h1>Create snippets </h1>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="col-md-12"  style="margin-top: 100px;">
    <textarea type="text" class="form-control" id="descriptionInput" name="description"
      placeholder="Enter a new snippets description here" required="required" autofocus="autofocus">
    </textarea>
  </div>
  <div class="create">
    <button type="submit" class="btn btn-primary">Create</button>
  </div>
</form>
