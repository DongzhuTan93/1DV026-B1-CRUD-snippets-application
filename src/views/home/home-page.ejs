<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container" style="margin-top: 150px;">
      <% if (typeof user === 'undefined') { %>
        <h1 class="display-3">
          Welcome to our snippets!
        </h1>
      <form method="POST" action="/snippets-app/home/register">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <p><input type="text" name="usersname" placeholder="users name"></p>
        <p><input type="text" name="userspassword" placeholder="At least 10 characters"></p>
        <p><button type="submit"  class="btn btn-primary">Register</button></p>
      </form>
      <a href="/snippets-app/home/login">Already member? Click here to login</a>
      <% } %>
      <% if (typeof user !== 'undefined') { %>
        <h1 class="display-3">
          Welcome  "<%= user.username %>" to our snippets!
        </h1>
      <% } %>
    </div>
</div>
